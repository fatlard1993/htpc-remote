{
	"name": "htpc-remote",
	"version": "1.5.0",
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": "./server/index.js"
	},
	"description": "BYOD htpc control",
	"author": "fatlard1993",
	"license": "ISC",
	"browserslist": [
		"last 1 version",
		"> 1%",
		"not dead",
		"not op_mini all"
	],
	"scripts": {
		"prepare": "bun run build",
		"build": "bun run build:clean && bun run client/build.js",
		"build:clean": "rm -rf ./client/build/",
		"build:watch": "bun run build -- --watch",
		"start": "NODE_ENV=production bun server/index.js",
		"dev": "NODE_ENV=development bun --hot server/index.js",
		"lint": "bun --bun eslint",
		"lint:fix": "bun --bun eslint --fix",
		"format": "bun run lint:fix && bun --bun prettier --write .",
		"version": "npm version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fatlard1993/htpc-remote.git"
	},
	"bugs": {
		"url": "https://github.com/fatlard1993/htpc-remote/issues"
	},
	"homepage": "https://github.com/fatlard1993/htpc-remote#readme",
	"dependencies": {
		"@jitsi/robotjs": "^0.6.13",
		"argi": "github:fatlard1993/argi#fcac703",
		"log": "github:fatlard1993/log#e4cb364",
		"vanilla-bean-components": "github:fatlard1993/vanilla-bean-components#252ee19"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.23.0",
		"@happy-dom/global-registrator": "^17.4.4",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"bun-types": "^1.2.8",
		"eslint": "^9.23.0",
		"eslint-plugin-compat": "^6.0.2",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-jsdoc": "^50.6.9",
		"eslint-plugin-spellcheck": "0.0.20",
		"eslint-plugin-testing-library": "^7.1.1",
		"eslint-plugin-unicorn": "^58.0.0",
		"eslint-plugin-write-good-comments": "^0.2.0",
		"globals": "^16.0.0",
		"prettier": "3.5.3"
	}
}
